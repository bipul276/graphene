# Postgres
DATABASE_URL=postgres://user:password@host:5432/dbname
PGSSL=true

# CORS
# Example for local dev:
# CORS_ORIGIN=http://localhost:5173
CORS_ORIGIN=*

# JWT
JWT_SECRET=super-secret-change-me

# Firebase Admin (for server-side uploads)
# Either set FIREBASE_SERVICE_ACCOUNT_JSON to the full JSON (escaped) or
# set GOOGLE_APPLICATION_CREDENTIALS to a path to the JSON file on disk.
# FIREBASE_SERVICE_ACCOUNT_JSON={...}
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/serviceAccount.json
# FIREBASE_PROJECT_ID=graphene-d5235
# FIREBASE_STORAGE_BUCKET=graphene-d5235.appspot.com
# Blockchain (optional)
# Polygon Amoy example
# CHAIN_RPC=https://polygon-amoy.g.alchemy.com/v2/XXXX
# CERT_REGISTRY_ADDRESS=0xYourDeployedContract
# ISSUER_ADMIN_PK=0x<admin-private-key>
# ISSUER_PK=0x<issuer-private-key>
